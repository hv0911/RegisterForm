<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FORM</title>

    {{!-- Styling goes here --}}
    <style>
      body {
        background-color: rgb(145, 164, 179);
        margin: 0%;
        display: flex;
        
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100vw;
      }

      form {
        display: flex;
        flex-direction: column;
        height: 90vh;
        border-radius: 5px;
        width: 40vw;
        background-color: white;
         align-items: center;
        justify-content: space-evenly; 
      }

    .container{
        display: flex;
        flex-direction: column;
        height: 90vh;
        border-radius: 5px;
        width: 40vw;
        background-color: white;
         align-items: center;
        justify-content: space-evenly;  
        margin-left: 10px;
    }

      form > h1 ,h3{
        color: rgba(0, 0, 0, 0.644);
        border-bottom: 1px solid rgba(0, 0, 0, 0.644);
        width: 10vw;
        text-align: center;
        padding-bottom: 1vmax;
        font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
      }

    

      form > input {
        padding: 1vmax;
        width: 30vw;
        outline: none;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
          sans-serif;
        font-size: 1.3vmax;
        border: none;
        border-bottom: 1px solid rgba(70, 70, 70, 0.5);
      }
      form > input[type="submit"] {
        width: 20vw;
        border: none;
        cursor: pointer;
        background-color: #eb4034;
        color: white;
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
          "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
        font-size: 1.4vmax;
        transition: all 0.5s;
      }
      .form > input[type="submit"]:hover {
        background-color: #c4342a;
      }

      img:hover{
        cursor: pointer;
      }
    </style>
  </head>


{{!-- Markup goes here --}}
  <body>
    <div class="form">
        <form action="/api/v1/register" method="POST">
            <h1>REGISTER</h1>
            <input placeholder="Enter Your Name" type="text" name="name" id="name" />
            <input
              placeholder="Enter Your Email"
              type="email"
              name="email"
              id="email"
            />
            <input
              placeholder="Enter Your Password"
              type="password"
              name="password"
              id="password"
            />
            <input type="submit" value="Login" />
          </form>

    </div>


   <div class="container">
    <h3>Images</h3>
    <div>
     <img id="img1" src="../adiyogi.jpg" alt="not found" height="200px" width="200px" onclick="Change1()"/>
    </div>
    <div>
     <img id="img2" src="../golden_temple.jpg" alt="not found" height="200px" width="200px" onclick="Change2()"/>
    </div>

   </div>
   <div>
    <h5>{{name}}</h5>
   </div>
   

  {{!-- Logic goes here --}}
 <script>
    function Change1(){

 let image = document.getElementById('img1');
    if(image.src.match('../adiyogi.jpg')){
        image.src='../buddha.jpg';
    }else if(image.src.match('../buddha.jpg')){
        image.src='../adiyogi.jpg'
    }
    }

    function Change2(){

 let image = document.getElementById('img2');
    if(image.src.match('../golden_temple.jpg')){
        image.src='../unity.jpg';
    }else if(image.src.match('../unity.jpg')){
        image.src='../golden_temple.jpg'
    }
    }
   
   
 </script>
  </body>
</html>